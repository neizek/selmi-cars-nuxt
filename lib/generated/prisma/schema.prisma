generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model CarMake {
  id              Int        @id @default(autoincrement())
  name            String     @unique
  countryOfOrigin String?
  logoUrl         String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  models          CarModel[]
  cars            Cars[]

  @@map("car_makes")
}

model CarModel {
  id           Int               @id @default(autoincrement())
  modelName    String
  year         Int?
  engineType   String?
  bodyStyle    BodyStyle?
  fuelType     FuelType?
  transmission TransmissionType?
  isActive     Boolean           @default(true)
  makeId       Int
  make         CarMake           @relation(fields: [makeId], references: [id])
  cars         Cars[]

  @@unique([makeId, modelName, year])
  @@index([makeId])
  @@map("car_models")
}

model Cars {
  id      Int      @id @default(autoincrement())
  makeId  Int
  make    CarMake  @relation(fields: [makeId], references: [id])
  modelId Int
  model   CarModel @relation(fields: [modelId], references: [id])
  price   Int
  year    Int
  mileage Int

  @@index([makeId])
  @@index([modelId])
  @@map("cars")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  firstname String
  lastname  String
  password  String
  role      Role   @default(USER)

  @@map("users")
}

model Entity {
  id                 Int    @id @default(autoincrement())
  registrationnumber String

  @@map("entities")
}

enum Role {
  ADMIN
  MODERATOR
  USER
}

enum BodyStyle {
  SEDAN
  SUV
  HATCHBACK
  COUPE
  CONVERTIBLE
  WAGON
  VAN
  TRUCK
  CROSSOVER
  MINIVAN
}

enum FuelType {
  GASOLINE
  DIESEL
  ELECTRIC
  HYBRID
  PLUGIN_HYBRID
  HYDROGEN
  NATURAL_GAS
}

enum TransmissionType {
  MANUAL
  AUTOMATIC
  CVT
  SEMI_AUTOMATIC
  DUAL_CLUTCH
}
